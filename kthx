#!/bin/bash

target=$1
action='start'

if [ $2 ]; then
    target=$2
    case $1 in
    "bai")
        action='stop'
        ;;
    "brb")
        action='restart'
        ;;
    'on')
        action='enable'
        ;;
    'off')
        action='disable'
        ;;
    *)
        action=$1
        ;;
    esac
fi

case $DISTRO in
"Arch" | "Fedora" | "Debian")
    sudo systemctl $action $target
    ;;
"Ubuntu" | "LinuxMint")
    sudo service $target $action
    ;;
"Gentoo")
    sudo /etc/init.d/$target $action
    ;;
*)
    echo "Sorry, I don't know how to run services on $DISTRO."
    ;;
esac
